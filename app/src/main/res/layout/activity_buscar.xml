<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".BuscarActivity">

    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:textSize="30sp"

              android:text="Buscar Personas"/>

    <EditText android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/ced"
              android:inputType="number"
              android:hint="Ingresar Cedula"/>

    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Buscar"
            android:id="@+id/buscarb"/>

    <TextView
            android:id="@+id/cedulab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cedula:" />

    <TextView
            android:id="@+id/nombresb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombres:" />
    <TextView
            android:id="@+id/nivelb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nivel Educativo:" />
    <TextView
            android:id="@+id/estratob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Estrato:" />
    <TextView
            android:id="@+id/salariob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Salario:" />




</LinearLayout>